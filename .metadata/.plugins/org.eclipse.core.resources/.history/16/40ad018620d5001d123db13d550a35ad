package employee;
import java.util.Scanner;
class employeeDetails{
	int e_id;
	String e_name;
	double salary;
	
	void get() {
		Scanner sc = new Scanner(System.in);
		System.out.println("Enter Employee Id");
		e_id 	   = sc.nextInt();
		System.out.println("Enter Employee Name");
		e_name     = sc.next();
		System.out.println("Enter Employee Salary");
		salary     = sc.nextDouble();
	}
	void sort(employeeDetails e[]){
		for(int i= 0; i<e.length;i++) {
			for(int j=0; j<e.length-i-1;j++){
				if(e[i].salary > e[i+1].salary) {
					employeeDetails temp;
					temp	= e[i];
					e[i]	= e[i+1];
					e[i+1]	= temp;				
				}
			}
		}
		
	}
	void show(employeeDetails e[]){
		for(int i=0;i<e.length;i++) {
			System.out.println("Employee Id: "+e[i].e_id+"Employee Name: "+e[i].e_name+"Salary: "+e[i].salary);
		}
	}
}
public class Employee {
	public static void main(String[] args) {
		employeeDetails e[] = new employeeDetails[2];
		for(int i=0; i<2; i++) {
			e[i] = new employeeDetails();
			e[i].get();
		}
		employeeDetails ed = new employeeDetails();
		ed.sort(e);
		ed.show(e);

	}

}
